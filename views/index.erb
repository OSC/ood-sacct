<h1><%= title %></h1>

<div class="pull-right">
  <form class="form-inline">
    <!-- FIXME: should probably be using input type="date" -->
    Start Date: <input class="picker form-control" type="text" name="start_date" value="<%= @start_date %>">
    End Date: <input class="picker form-control" type="text" name="end_date" value="<%= @end_date %>">
    <input class="btn btn-primary" type="submit">
  </form>
</div>

<div class="row">
  <span>Output generated: <%= Time.now %></span>
  <a type="button" class="btn btn-sm btn-default" onClick="window.location.reload()">&#x21bb; Refresh</a>
</div>

<div class="row">
  <pre>$ <%= @command %></pre>
</div>

<table class="table table-bordered">
  <tr>
    <th>JOBID</th>
    <th>USER</th>
    <th>JOBNAME</th>
    <th>START</th>
    <th>END</th>
    <th>STATE</th>
  </tr>
  <% @processes.each do |app| %>
    <tr>
      <td><a href="<%= url("show/") %><%= app.jobid %>"><%= app.jobid %></a></td>
      <td><%= app.user %></td>
      <td><%= app.jobname %></td>
      <td><%= app.start %></td>
      <td><%= app.end %></td>
      <td><%= app.state %></td>
    </tr>
  <% end %>
</table>



